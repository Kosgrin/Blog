@model Blog.Models.Account.RegisterModel
@{
    ViewBag.Title = "Зарегистрироваться";
}



<div class="container"  >
        <div class="row">
            <form class="mx-auto"  id="post-add-form" method="post">
                @Html.ValidationMessageFor(x => x.Email)
                <div class="form-row input-group my-2" >
                    <input type="text" name="@nameof(Model.Email)" value="@Model.Email" placeholder="Почта" style="background-color" />
                </div>
                @Html.ValidationMessageFor(x => x.Password)
                <div class="form-row input-group my-2">
                    <input type="password" name="@nameof(Model.Password)" value="" placeholder="Пароль" />
                </div>
               @Html.ValidationMessageFor(x => x.ConfirmPassword)
                <div class="form-row my-2">
                    <input type="password" name="@nameof(Model.ConfirmPassword)" value="" placeholder=" Подтвердить пароль" />
                </div>
                @Html.AntiForgeryToken()
                <input type="submit" value="Зарегистрироваться" />
            </form>
        </div>
    </div>

